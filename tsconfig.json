{
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "module": "none",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "target": "es6",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "example/**/*.ts",
    "example/**/*.tsx"
  ],
  "exclude": ["build", "node_modules", ".git", ".vscode"]
}
