{
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": false,
    "module": "none",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "target": "es6",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["build", "node_modules", ".git", ".vscode"]
}
